<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_activity_customer"
    android:background="@drawable/signupbackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--            logo-->

        <ImageView
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:paddingTop="15dp"
            android:paddingBottom="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logofinal" />

        <!--            Signup text-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:fontFamily="sans-serif-light"
            android:text="SIGN UP"
            android:textStyle="bold"
            android:textColor="#141414"
            android:textSize="25dp">

        </TextView>

        <!--            FULLNAME INPUT-->

        <EditText
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:padding="16dp"
            android:layout_marginBottom="16dp"

            ></EditText>

        <!--             INPUT-->

        <EditText
            android:id="@+id/nid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NID Number"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            >

        </EditText>

        <!--             INPUT-->

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Permanent Address"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            ></EditText>

        <!--             INPUT-->
        <!--             INPUT-->

        <EditText
            android:id="@+id/caddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Present Address"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            ></EditText>

        <!--             INPUT-->

        <!--             INPUT-->

        <EditText
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:padding="16dp"
            android:layout_marginBottom="16dp"></EditText>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            >

        </EditText>

        <!--             INPUT-->

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            >

        </EditText>

        <!--             INPUT-->



        <!--             SIGNPU BUTTON -->
        <Button
            android:id="@+id/signup"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_gravity="center"
            >
        </Button>

    </LinearLayout>
</ScrollView>