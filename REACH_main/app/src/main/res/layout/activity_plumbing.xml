            android:text="Name : Ashrafur Rahman\nNID No:6582465\nPermanent Address: Arakan ,Myanmar\nPresent Address : Kin Bridge er nicher Bosti , Sylhet\nExpertise: Plumbing,Ac Repairing\nRatings : 5 star\nCharge :300 taka per hour\nAvailablity: Yes"
            >

        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/back1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="back"
                android:layout_margin="5dp"

                >

            </Button>
            <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:layout_margin="5dp"
                >

            </Button>
            <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="COnfirm"
                android:layout_margin="5dp"
                >

